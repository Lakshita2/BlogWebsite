
<%- include('partials/header'); -%> 
<h1>Home</h1>
<p><%= StartingContent%></p>

<% ThePosts.forEach(function(post){  %>
 <h2><%=post.title %></h2>
 
 <%  if(post.content.length<=100){ %>
      <p >
        <%=post.content %> 
        <a href="/posts/<%=  post.title %> ">Read More</a>
    </p> 
<% } else { %>

 <%   truncatedContent = post.content.slice(0,100) + "..."  %> 
      <p>
        <%= truncatedContent %>
        <a href="/posts/<%=  post.title %>">Read More</a>
    </p> 
<% } %>
<% }) %>
 
 

 
<%- include('partials/footer'); -%> 
